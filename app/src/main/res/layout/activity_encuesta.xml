<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.proyectomoviles.encuesta"
    android:background="#0039a6">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" >

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/respuesta1"
            android:hint="1 al 5"
            android:layout_marginTop="57dp"
            android:textColor="#ffffff"
            android:layout_alignParentStart="true"
            android:textColorHint="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/respuesta2"
            android:hint="1 al 5"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView15"
            android:layout_alignParentStart="true"
            android:textColorHint="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/respuesta3"
            android:hint="1 al 5"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView16"
            android:layout_alignParentStart="true"
            android:textColorHint="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/respuesta4"
            android:hint="1 al 5"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView17"
            android:layout_alignEnd="@+id/textView21"
            android:textColorHint="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/respuesta5"
            android:hint="1 al 5"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView18"
            android:layout_alignStart="@+id/textView20"
            android:textColorHint="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/respuesta6"
            android:hint="1 al 5"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView19"
            android:layout_alignParentStart="true"
            android:textColorHint="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/respuesta7"
            android:hint="Escribe tu respuesta"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView20"
            android:layout_alignStart="@+id/textView23"
            android:textColorHint="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/respuesta8"
            android:hint="Escribe tu respuesta"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView21"
            android:layout_alignParentStart="true"
            android:textColorHint="#ffffff" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/respuesta9"
            android:textColor="#ffffff"
            android:hint="Escribe tu respuesta"
            android:layout_below="@+id/textView22"
            android:layout_alignParentStart="true"
            android:textColorHint="#ffffff" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Relación de actividades con el proyecto:"
            android:id="@+id/textView14"
            android:textColor="#FFFFFFFF"
            android:layout_alignParentStart="true"
            android:layout_marginTop="29dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Materal utilizado en la sesión:"
            android:id="@+id/textView15"
            android:textColor="#ffffff"
            android:layout_below="@+id/respuesta1"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nivel de preparación:"
            android:id="@+id/textView16"
            android:textColor="#ffffff"
            android:layout_below="@+id/respuesta2"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dominio de la sesión:"
            android:id="@+id/textView17"
            android:textColor="#ffffff"
            android:layout_below="@+id/respuesta3"
            android:layout_alignEnd="@+id/textView22" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Que tan involucrados estuvieron:"
            android:id="@+id/textView18"
            android:textColor="#ffffff"
            android:layout_below="@+id/respuesta4"
            android:layout_alignStart="@+id/respuesta5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Interes en la sesión:"
            android:id="@+id/textView19"
            android:textColor="#ffffff"
            android:layout_below="@+id/respuesta5"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Aspecto por mejorar:"
            android:id="@+id/textView20"
            android:textColor="#ffffff"
            android:layout_below="@+id/respuesta6"
            android:layout_alignStart="@+id/respuesta7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Propuesta para mejorar:"
            android:id="@+id/textView21"
            android:textColor="#ffffff"
            android:layout_below="@+id/respuesta7"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Situaciones de riesgo:"
            android:id="@+id/textView22"
            android:textColor="#ffffff"
            android:layout_below="@+id/respuesta8"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Comentarios:"
            android:id="@+id/textView23"
            android:textColor="#ffffff"
            android:layout_below="@+id/respuesta9"
            android:layout_alignStart="@+id/respuesta10" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/respuesta10"
            android:textColor="#ffffff"
            android:hint="Escribe tu respuesta"
            android:layout_below="@+id/textView23"
            android:layout_alignStart="@+id/spinner"
            android:textColorHint="#ffffff" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terminar"
            android:id="@+id/terminarBT"
            android:layout_marginTop="58dp"
            android:layout_below="@+id/spinner"
            android:layout_toEndOf="@+id/textView19" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha:"
            android:id="@+id/textView24"
            android:textColor="#ffffff"
            android:layout_below="@+id/respuesta10"
            android:layout_alignStart="@+id/respuesta10" />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_below="@+id/textView24"
            android:layout_alignStart="@+id/textView16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/nombreTV"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView17"
            android:textColor="#ffffff" />
    </RelativeLayout>
</ScrollView>
