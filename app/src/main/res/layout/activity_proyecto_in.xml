<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="itesm.mx.proyectomoviles.proyectoIn"
    android:background="#2E39B1"
    android:id="@+id/ProyIn">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bienvenido(a): "
        android:id="@+id/textView4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFFFF" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Nombre"
        android:id="@+id/proyectoTV"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/asistenciaBT"
        android:layout_alignParentEnd="true"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asistencia"
        android:id="@+id/asistenciaBT"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/proyectoTV"
        android:layout_alignStart="@+id/monitoreoBT" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Monitoreo"
        android:id="@+id/monitoreoBT"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/asistenciaBT"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
