<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#2E39B1"
    android:id="@+id/layoutID">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Incubadora Social: "
        android:id="@+id/textView3"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Espacio Formativo:"
        android:id="@+id/lugar"
        android:textColor="#ffffff"
        android:layout_below="@+id/incubadoraTV"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Proyecto:"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:layout_below="@+id/espacioTV"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/incubadoraTV"
        android:layout_marginStart="27dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/lugar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/espacioTV"
        android:layout_below="@+id/incubadoraTV"
        android:layout_alignStart="@+id/incubadoraTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/proyectoTV"
        android:layout_below="@+id/espacioTV"
        android:layout_alignStart="@+id/espacioTV" />

</RelativeLayout>